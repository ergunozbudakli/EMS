@model EMS.Models.Entity.Employee

@{
    ViewBag.Title = "Çalışan Sil";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user-minus me-2"></i>Çalışan Sil</h2>
</div>

<div class="card">
    <div class="card-body">
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Dikkat!</strong> Bu çalışanı silmek istediğinizden emin misiniz?
        </div>

        <dl class="row">
            <dt class="col-sm-2">Ad Soyad</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.FullName)</dd>

            <dt class="col-sm-2">E-posta</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-2">Telefon</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.PhoneNumber)</dd>

            <dt class="col-sm-2">Departman</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Department!.Name)</dd>

            <dt class="col-sm-2">İşe Başlama Tarihi</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.HireDate)</dd>

            <dt class="col-sm-2">Maaş</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Salary)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="mt-3">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash me-1"></i>Sil
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Geri Dön
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('form').on('submit', function () {
                showSuccessMessage('Çalışan başarıyla silindi.');
            });
        });
    </script>
} 